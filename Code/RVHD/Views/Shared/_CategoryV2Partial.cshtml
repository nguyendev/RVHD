                            </li>
                        }
                        @*}*@
                    </ul>
                </div><!--categories-->
                <div class="category-button">
                    <a class="mas" href="http://demo.joinwebs.com/classiera/category/electronics/" onmouseover="this.style.backgroundColor='@item.Color'" onmouseout="this.style.backgroundColor='inherit'">VIEW ALL</a>
                </div>
            </div><!--categoryBox-->
        </div><!--large3-->
    }
</div><!-- Categories Box ROW-->
       
