                                <li>Không có danh mục con</li>
                            }
                            else
                            {*@
                        @foreach (var subitem in item.ListCategoryItems)
                        {
                            {
                                ViewData["category"] = @item.Slug;
                                ViewData["categorySub"] = @subitem.Slug;

                            }

                            <li>
                                <a asp-controller="CategoryItem" asp-action="GetAds" asp-route-category="@item.Slug" asp-route-categorySub="@subitem.Slug" title="Xem tin đăng trong @subitem.Ci_Name">@subitem.Ci_Name									</a>
