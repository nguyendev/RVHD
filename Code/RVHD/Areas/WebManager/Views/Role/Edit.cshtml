@model RVHD.Areas.Admin.ViewModels.RoleEditModel
<section class="content-header">
    <h1>
        Edit role
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Manager</a></li>
        <li class="active">Role Manager</li>
        <li class="activi">Edit role</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">

                </div><!-- /.box-header -->
                <div class="box-body">
                    <div class="row">
                        <div class="col-xs-12">
                            <div class="box box-primary">
                                <div class="box-header with-border">
                                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                                    <span class="label label-success pull-right"><i class="fa fa-search-plus"></i></span>
                                </div><!-- /.box-header -->
                                <div class="box-body">
                                    <div class="bg-primary panel-body"><h4>Edit role user</h4></div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <form asp-action="Edit" method="post">
                                        <input type="hidden" name="roleName" value="@Model.Role.Name" />
                                        <h6 class="bg-info panel-body">Thêm vào @Model.Role.Name</h6>
                                        <table class="table table-bordered table-condensed">
                                            @if (Model.NonMembers.Count() == 0)
                                            {
                                                <tr><td colspan="2">All Users Are Members</td></tr>
                                            }
                                            else
                                            {
                                                @foreach (Final.Models.BlogMember user in Model.NonMembers)
                                                {
                                                    <tr>
                                                        <td>@user.UserName</td>
                                                        <td>
                                                            <input type="checkbox" name="IdsToAdd" value="@user.Id">
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                        <h6 class="bg-info panel-body">Xóa khỏi @Model.Role.Name</h6>
                                        <table class="table table-bordered table-condensed">
                                            @if (Model.Members.Count() == 0)
                                            {
                                                <tr><td colspan="2">No Users Are Members</td></tr>
                                            }
                                            else
                                            {
                                                @foreach (Final.Models.BlogMember user in Model.Members)
                                                {
                                                    <tr>
                                                        <td>@user.UserName</td>
                                                        <td>
                                                            <input type="checkbox" name="IdsToDelete" value="@user.Id">
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </table>
                                        <button type="submit" class="btn btn-primary">Save</button>
                                        <a asp-action="Index" class="btn btn-default">Cancel</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>